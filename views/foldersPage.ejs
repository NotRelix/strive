<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/globals.css" />
    <link rel="stylesheet" href="/css/partials/navbar.css" />
    <link rel="stylesheet" href="/css/foldersPage.css" />
    <link rel="stylesheet" href="/css/partials/tools.css" />
    <link rel="stylesheet" href="/css/partials/addFileModal.css" />
    <script src="/js/addFileModal.js" defer></script>
  </head>
  <body>
    <%- include("partials/navbar") %>
    <%- include("partials/addFileModal") %>
    <%
    if (locals.errors) { %>
    <ul>
      <% errors.forEach((error) => { %>
      <li><%= error.msg %></li>
      <% }) %>
    </ul>
    <% } %>
    <main>
      <div class="container">
        <%- include("partials/tools") %>
        <div class="drive-contents">
          <h1>My Drive</h1>
          <% files.forEach((file) => { %>
          <%- include("partials/fileCard",
          {file}) %>
          <% }) %>
        </div>
      </div>
    </main>
  </body>
</html>

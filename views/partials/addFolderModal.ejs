<div class="add-folder-modal modal">
  <div class="modal-content">
    <div class="modal-header">
      <h1>Add Folder</h1>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="modal-close add-folder-close-btn"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M6 18 18 6M6 6l12 12"
        />
      </svg>
    </div>
    <form
      class="add-folder-form"
      action="/folders/<%= locals.folderId %>/add"
      method="post"
    >
      <input type="text" name="folderName" placeholder="Folder name" required />
      <button type="submit">Add</button>
    </form>
  </div>
</div>

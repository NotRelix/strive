generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  files    Files[]
}

model Files {
  id        Int      @id @default(autoincrement())
  path      String
  createdAt DateTime @default(now())
  fileName  String
  size      Float
  users     Users    @relation(fields: [userId], references: [id])
  userId    Int
  folders   Folders  @relation(fields: [foldersId], references: [id])
  foldersId Int
}

model Folders {
  id         Int       @id @default(autoincrement())
  name       String
  files      Files[]
  parentId   Int?
  parent     Folders?  @relation("FolderToSubfolder", fields: [parentId], references: [id])
  subfolders Folders[] @relation("FolderToSubfolder")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
